<div class="body">
<div class="container">
	<div clas="row">
		<h2>CD一覧</h2>
		<% @cds.each do |cd| %>
			<div class="col-lg-4">
				<%= link_to cd_path(cd.id) do %>
				<%= attachment_image_tag(cd, :cd_image, :fill, 300, 300) %>
				<% end %>
				<p><%= link_to cd.cd_title, cd_path(cd.id) %></p>
				<p><%= link_to cd.artist.artist_name, artist_path(cd.artist.id) %></p>
				<p>価格: <%= cd.price %></p>

				<% if user_signed_in? %>
					<div>
						<div class="inline-block">
						<%= link_to add_item_path(cd.id), method: :post do %>
						<i class="fas fa-cart-arrow-down" style="font-size:30px;"></i>
						<% end %>
						</div>
						<% if cd.favorited_by?(current_user) %>
							<div class="inline-block">
								<%= link_to cd_favorite_path(cd), method: :delete do %>
								<i class="far fa-heart" aria-hidden="true" style="color: red;"></i><%= cd.favorites.count %>
								<% end %>
							</div>
						<% else %>
							<div class="inline-block">
							<%= link_to cd_favorite_path(cd), method: :post do %>
							<i class="far fa-heart" aria-hidden="true"></i><%= cd.favorites.count %>
							<% end %>
							</div>
						<% end %>
					</div>
				 <% end  %>
				 
				 <% if user_signed_in? && current_user.admin?  %>
					<botton class="btn btn-default"><%= link_to "CD削除", cd_path(cd.id), method: :delete %></botton>
				<% end %>
			</div>
		<% end %>
	</div>
</div>
</div>
<div class="marginControl">
</div>
<div class="container">
	<div clas="row">
		<div class="col-lg-2">
			<%= link_to "TOPに戻る", root_path, class: "btn btn-default" %>
		</div>
		<div class="col-lg-10">
		</div>
	</div>
</div>

<style>
	.inline-block {
		display: inline-block;
	}
	.marginControl {
		margin: 20px 0;
		height: 10px;
	}
</style>